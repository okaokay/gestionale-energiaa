BACKEND_URL=https://gmgestionale.cloud
CORS_ORIGIN=https://gmgestionale.cloud
UNSUBSCRIBE_URL=https://gmgestionale.cloud/unsubscribe

# Email (se usi integrazioni, opzionale)
